<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="parentVBox" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.FxmlSampleController">
   <children>
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="button1" mnemonicParsing="false" text="Button1" />
            <Label fx:id="label" />
            <Region HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <AnchorPane fx:id="anchorPane">
	      <children>
		      <fx:include fx:id="Controller1" source="Controller1.fxml" />
		      <fx:include fx:id="Controller2" source="Controller2.fxml" />
	      </children>
      </AnchorPane>
      <HBox alignment="BOTTOM_RIGHT" VBox.vgrow="ALWAYS">
         <children>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="button2" mnemonicParsing="false" text="Button2" />
         </children>
      </HBox>
   </children>
</VBox>
